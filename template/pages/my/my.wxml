<view class='UCenter-bg'>
  <image src='/images/logo.png' class='png' mode='widthFix'></image>
  <view class='text-xl'>ColorUI组件库
    <text class='text-df'>v2.0</text>
  </view>
  <view class='margin-top-sm'>
    <text>By:文晓港</text>
  </view>
  <image src='https://image.weilanwl.com/gif/wave.gif' mode='scaleToFill' class='gif-wave'></image>
</view>
<view class='padding flex text-center text-grey bg-white shadow-warp'>
  <view class='flex flex-sub flex-direction solid-right'>
    <view class="text-xxl text-orange">{{visitTotal}}</view>
    <view class="margin-top-sm">
      <text class='icon-attentionfill'></text> View</view>
  </view>
  <view class='flex flex-sub flex-direction solid-right'>
    <view class="text-xxl text-blue">{{starCount}}</view>
    <view class="margin-top-sm">
      <text class='icon-favorfill'></text> Star</view>
  </view>
  <view class='flex flex-sub flex-direction'>
    <view class="text-xxl text-green">{{forksCount}}</view>
    <view class="margin-top-sm">
      <text class='icon-fork'></text> Fork</view>
  </view>
</view>
<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
  <view class="cu-item arrow">
    <navigator class='content' url='bill/bill' hover-class='none'>
      <text class='icon-formfill text-green'></text>
      <text class='text-grey'>账单</text>
    </navigator>
  </view>
  <view class="cu-item arrow">
    <navigator class='content' url='balance/balance' hover-class='none'>
      <image src='/images/logo.png' class='png' mode='aspectFit'></image>
      <text class='text-grey'>余额</text>
    </navigator>
  </view>
  <view class="cu-item arrow">
    <navigator class='content' url='order/order' hover-class='none'>
      <text class='icon-formfill text-green'></text>
      <text class='text-grey'>订单管理</text>
    </navigator>
  </view>
   <view class="cu-item arrow">
    <navigator class='content' url='account/account' hover-class='none'>
      <text class='icon-formfill text-green'></text>
      <text class='text-grey'>账号中心</text>
    </navigator>
  </view>
</view>

<view class='cu-tabbar-height'></view>